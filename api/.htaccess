RewriteEngine On

# Handle Authorization Header

RewriteCond %{HTTP:Authorization} .
RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

# Force HTTPS

RewriteCond %{HTTPS} !=on
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301,NE]

# Handle CORS preflight requests

RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Set CORS headers

Header always set Access-Control-Allow-Origin "https://school.ntubedglobal.com"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, X-API-Key, Accept"
Header always set Access-Control-Allow-Credentials "true"

# Route all timetable resource requests through PHP (handles both filename and ID-based downloads)
RewriteRule ^uploads/timetable-resources/(.*)$ index.php [QSA,L]

# Route other upload requests through PHP (for authentication)
RewriteRule ^uploads/(.*)$ index.php [QSA,L]

# Route all other requests to index.php except for existing files
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]

# Protect sensitive directories

<FilesMatch "^(config|controllers|database|models|core|routes|migrate|storage)/">
    Deny from all
</FilesMatch>

# Allow access to index.php but block other PHP files

<FilesMatch "^(?!index\.php$).*\.php$">
    Deny from all
</FilesMatch>

# PHP settings

<IfModule mod_php.c>
    php_flag display_errors off
    php_value max_execution_time 300
    php_value memory_limit 128M
    php_flag session.cookie_httponly on
    php_flag session.use_only_cookies on
    php_flag session.cookie_secure on
</IfModule>
